<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<property name="connection.url">jdbc:hsqldb:hsql://localhost/user_module_test</property>
		<property name="connection.username">sa</property>
		<property name="connection.password"></property>
		<property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
		<property name="dialect">org.hibernate.dialect.HSQLDialect</property>

		<property name="show_sql">true</property>

		<property name="format_sql">true</property>
		<property name="hbm2ddl.auto">update</property>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">1</property>
		<property name="current_session_context_class">thread</property>

		<mapping class="com.jardo.usermodule.hbn.entities.UserEntity" />
		<mapping class="com.jardo.usermodule.hbn.entities.PasswordResetTokenEntity" />
		<mapping class="com.jardo.usermodule.hbn.entities.LogInRecordEntity" />

	</session-factory>
</hibernate-configuration>
